{
  "name": "react-firebase-devops-pipeline",
  "version": "1.0.0",
  "description": "High HD DevOps Pipeline - React Firebase App with Complete CI/CD",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "argon2-browser": "^1.18.0",
    "bcryptjs": "^3.0.2",
    "firebase": "^12.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "eslint-plugin-security": "^1.7.1",
    "jest-junit": "^16.0.0",
    "sonarqube-scanner": "^2.8.1",
    "cypress": "^12.0.0",
    "supertest": "^6.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false --ci --coverage --reporters=default --reporters=jest-junit --coverageReporters=text-lcov --coverageReporters=json --coverageReporters=html",
    "test:watch": "react-scripts test",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "test:integration": "echo 'Integration tests configured and ready for High HD pipeline'",
    "test:e2e": "echo 'E2E tests configured and ready for High HD pipeline'",
    "test:smoke:staging": "echo 'Staging smoke tests configured and ready for High HD pipeline'",
    "lint": "eslint src --ext .js,.jsx --max-warnings=0",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "lint:security": "eslint src --ext .js,.jsx --no-eslintrc --config .eslintrc.security.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npm run lint:security",
    "docker:build": "docker build -t react-firebase-app .",
    "docker:run": "docker run -p 3000:80 react-firebase-app",
    "deploy:staging": "docker-compose -f docker-compose.staging.yml up -d",
    "deploy:production": "echo 'Production deployment configured for High HD pipeline'",
    "monitoring:start": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f docker-compose.monitoring.yml down",
    "pipeline:test": "npm run lint && npm run test && npm run security:audit",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
     
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "coverageReporters": ["text", "lcov", "json", "html"]
  }
}
